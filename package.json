{
  "name": "@struktos/cli",
  "version": "0.3.1",
  "description": "CLI tool for creating and managing Struktos.js projects with HTTP and gRPC support",
  "main": "dist/index.js",
  "bin": {
    "struktos": "bin/struktos.js"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && npm run copy:templates",
    "copy:templates": "cp -r src/templates dist/",
    "prepublishOnly": "npm run build",
    "dev": "tsx src/index.ts",
    "test": "jest --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:integration": "jest tests/integration --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:cli:new": "tsx src/index.ts new test-project",
    "test:cli:generate": "tsx src/index.ts generate service user --type=grpc",
    "release": "./scripts/release.sh",
    "release:patch": "./scripts/release.sh patch",
    "release:minor": "./scripts/release.sh minor",
    "release:major": "./scripts/release.sh major"
  },
  "keywords": [
    "struktos",
    "cli",
    "generator",
    "scaffold",
    "hexagonal-architecture",
    "grpc",
    "microservices",
    "enterprise",
    "typescript"
  ],
  "author": "Struktos.js Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/struktosjs/cli"
  },
  "bugs": {
    "url": "https://github.com/struktosjs/cli/issues"
  },
  "homepage": "https://github.com/struktosjs/cli#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "handlebars": "^4.7.8",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^8.2.10",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
